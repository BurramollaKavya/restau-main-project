<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group.project.controller.customer.CustomerHomepageController">
    <top>
        <HBox alignment="CENTER" prefHeight="68.0" prefWidth="600.0"
              BorderPane.alignment="CENTER"
              styleClass="navbar"
              stylesheets="@../css/navbar.css"
        >
            <children>
                <Label fx:id="mainTitle" text="Main Title"/>
                <fx:include source="../navbar/customer/customer-main-navbar.fxml"
                            fx:id="customerHomeNavbar"/>
            </children>
        </HBox>
    </top>
    <center>
        <ImageView fx:id="bgImage" fitHeight="150.0" fitWidth="200.0"
                   pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
