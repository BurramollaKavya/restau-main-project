<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group.project.controller.LoginController">
   <VBox alignment="CENTER" layoutX="99.0" layoutY="51.0" prefHeight="270.0"
         prefWidth="402.0">
      <Label text="Welcome to Cafe94">
         <font>
            <Font size="21.0"/>
         </font>
      </Label>
      <Label text="Where every bite is a delight"/>
      <Label text="username"/>
      <TextField fx:id="loginUsername" prefHeight="26.0" prefWidth="295.0"
                 promptText="enter username"/>
      <Button mnemonicParsing="false" prefHeight="26.0"
              prefWidth="148.0" text="Login" onAction="#onLoginButtonClick"/>
      <Label fx:id="resultLabel" text="Result"/>
      <Hyperlink text="New Foodie?"/>
   </VBox>
</AnchorPane>
