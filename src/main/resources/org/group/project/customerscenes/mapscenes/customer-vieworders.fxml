<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.group.project.controllers.customer.CustomerOrderHistoryViewController"
>
    <children>
        <HBox alignment="CENTER" prefHeight="69.0" prefWidth="600.0"
              styleClass="navbar"
              stylesheets="@../../css/navbar.css">
            <HBox styleClass="labelBox">
                <Label fx:id="headerLabel" styleClass="mainTitle"
                       text="Order History"/>
            </HBox>
            <fx:include
                    source="../../navbar/customer/customer-returnhome-navbar.fxml"
                    fx:id="customerReturnHomeNavbar"/>
        </HBox>
        <BorderPane fx:id="borderPane" prefHeight="1400.0" prefWidth="700.0">
            <center>
                <ImageView fx:id="bgImage" fitHeight="150.0" fitWidth="200.0"
                           pickOnBounds="true" preserveRatio="true"
                           BorderPane.alignment="CENTER"/>
                <TableView fx:id="orderHistoryTable" maxHeight="550.0"
                           maxWidth="680.0"
                           BorderPane.alignment="CENTER"
                >
                    <columns>
                        <TableColumn fx:id="orderDateColumn"
                                     prefWidth="75.0"/>
                        <TableColumn fx:id="orderTimeColumn"
                                     prefWidth="75.0"/>
                        <TableColumn fx:id="orderTypeColumn"
                                     prefWidth="75.0"/>
                        <TableColumn fx:id="orderStatusColumn"
                                     prefWidth="100.0"/>
                        <TableColumn fx:id="actionButtonColumn"
                                     prefWidth="35.0"/>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </children>
</VBox>
