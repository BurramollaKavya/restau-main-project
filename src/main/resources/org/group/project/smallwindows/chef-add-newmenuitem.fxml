<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="vbox"
      fx:controller="org.group.project.controllers.chef.ChefAddNewItemController"
      stylesheets="@../css/small-windows.css"
>
    <VBox styleClass="mainBox">
        <VBox styleClass="fieldBox">
            <Label fx:id="itemNameLabel" styleClass="itemNameLabel"
                   text="item name"/>
            <TextField fx:id="itemNameTextField"
                       styleClass="fieldLengthen"/>
        </VBox>
        <VBox styleClass="fieldBox">
            <Label fx:id="itemTypeLabel" styleClass="itemTypeLabel"
                   text="item type"/>
            <ChoiceBox fx:id="itemTypeChoiceBox" prefWidth="150.0"
                       styleClass="fieldLengthen"/>
        </VBox>
        <HBox alignment="CENTER" prefHeight="58.0" prefWidth="600.0"
              stylesheets="@../css/two-button-box.css">
            <VBox styleClass="buttonBox">
                <Button fx:id="addNewItemButton" mnemonicParsing="false"
                        styleClass="actionButton" text="Add New Item"/>
            </VBox>
            <VBox styleClass="buttonBox">
                <Button fx:id="cancelButton" mnemonicParsing="false"
                        styleClass="cancelButton" text="Cancel"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>
