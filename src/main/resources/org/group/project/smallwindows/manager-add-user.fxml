<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="vbox"
      fx:controller="org.group.project.controllers.manager.ManagerAddNewStaffController"
>
    <children>
        <Label fx:id="headerLabel" styleClass="headerLabel"
               text="Add New Staff"/>
        <Label fx:id="firstNameLabel" styleClass="firstNameLabel"
               text="first name"/>
        <TextField fx:id="firstNameTextField" styleClass="firstNameTextField"/>
        <Label fx:id="lastNameLabel" styleClass="lastNameLabel"
               text="last name"/>
        <TextField fx:id="lastNameTextField" styleClass="lastNameTextField"/>
        <Label fx:id="usernameLabel" styleClass="usernameLabel"
               text="username"/>
        <TextField fx:id="usernameTextField" styleClass="usernameTextField"/>
        <Label fx:id="positionLabel" styleClass="positionLabel"
               text="position"/>
        <ChoiceBox fx:id="positionChoiceBox" prefWidth="150.0"
                   styleClass="positionChoiceBox"/>
        <HBox alignment="CENTER" prefHeight="76.0" prefWidth="600.0">
            <children>
                <Button fx:id="addStaffButton" mnemonicParsing="false"
                        styleClass="addStaffButton" text="Add Staff"/>
                <Button fx:id="cancelButton" mnemonicParsing="false"
                        styleClass="cancelButton" text="Cancel"/>
            </children>
        </HBox>
    </children>
</VBox>
