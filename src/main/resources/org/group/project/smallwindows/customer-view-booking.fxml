<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.TextField?>
<VBox alignment="TOP_CENTER" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="vbox"
      fx:controller="org.group.project.controllers.customer.CustomerEditBookingController"
      stylesheets="@../css/small-windows.css"
>
    <VBox styleClass="fieldBox">
        <Label fx:id="reservationDateLabel" styleClass="reservationDateLabel"
               text="Reservation Date"/>
        <DatePicker fx:id="reservationDatePicker"
                    styleClass="fieldLengthen"/>
    </VBox>
    <VBox styleClass="fieldBox">
        <Label fx:id="reservationTimeLabel" styleClass="reservationTimeLabel"
               text="Reservation Time"/>
        <ChoiceBox fx:id="reservationTimeChoiceBox" prefWidth="150.0"
                   styleClass="fieldLengthen"/>
    </VBox>
    <VBox styleClass="fieldBox">
        <Label fx:id="numOfGuestsLabel" styleClass="numOfGuestsLabel"
               text="Max no. of guests"/>
        <ChoiceBox fx:id="numOfGuestsChoiceBox" prefWidth="150.0"
                   styleClass="fieldLengthen"/>
    </VBox>
    <VBox styleClass="fieldBox">
        <Label fx:id="tablePreferenceLabel"
               styleClass="tablePreferenceLabel"
               text="Table Preference"/>
        <ChoiceBox fx:id="tablePreferenceChoiceBox" prefWidth="150.0"
                   styleClass="fieldLengthen"/>
    </VBox>
    <VBox styleClass="fieldBox">
        <Label fx:id="lenOfReservationTimeLabel"
               styleClass="lenOfReservationTimeLabel"
               text="Length of Reservation Time"/>
        <ChoiceBox fx:id="lenOfReservationTimeChoiceBox" prefWidth="150.0"
                   styleClass="fieldLengthen"/>
    </VBox>
    <HBox alignment="CENTER" prefHeight="65.0" prefWidth="600.0"
          stylesheets="@../css/two-button-box.css">
        <VBox styleClass="buttonBox">
            <Button fx:id="saveChangesButton" mnemonicParsing="false"
                    styleClass="actionButton" text="Save Changes"/>
        </VBox>
        <VBox styleClass="buttonBox">
            <Button fx:id="closeButton" mnemonicParsing="false"
                    styleClass="cancelButton" text="Close"/>
        </VBox>
    </HBox>
</VBox>
