<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox"
      alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.group.project.controllers.manager.ManagerStaffManagementDetailsController"
      stylesheets="@../css/small-windows.css"
>
    <VBox styleClass="mainBox">
        <VBox styleClass="fieldBoxSmall">
            <Label fx:id="firstNameLabel" styleClass="firstNameLabel"
                   text="first name"/>
            <TextField fx:id="firstNameTextField"
                       styleClass="firstNameTextField"/>
        </VBox>
        <VBox styleClass="fieldBoxSmall">
            <Label fx:id="lastNameLabel" styleClass="lastNameLabel"
                   text="last name"/>
            <TextField fx:id="lastNameTextField"
                       styleClass="lastNameTextField"/>
        </VBox>
        <VBox styleClass="fieldBoxSmall">
            <Label fx:id="usernameLabel" styleClass="usernameLabel"
                   text="username"/>
            <TextField fx:id="usernameTextField"
                       styleClass="usernameTextField"/>
        </VBox>
        <HBox prefHeight="65.0" prefWidth="600.0"
              alignment="CENTER">
            <VBox styleClass="fieldBoxSmallInHBox">
                <Label fx:id="hoursLeftLabel"
                       styleClass="hoursLeftLabel" text="hours left"/>
                <TextField fx:id="hoursLeftTextField"
                           styleClass="hoursLeftTextField"/>
            </VBox>
            <VBox fx:id="hoursLeftVbox">
                <Button fx:id="incrementHoursLeftButton"
                        mnemonicParsing="false"/>
                <Button fx:id="decrementHoursLeftButton"
                        mnemonicParsing="false"/>
            </VBox>
        </HBox>
        <VBox styleClass="fieldBoxSmall">
            <Label fx:id="totalHoursWorkedLabel"
                   styleClass="totalHoursWorkedLabel"
                   text="total hours worked"/>
            <TextField fx:id="totalHoursWorkedTextField"
                       styleClass="totalHoursWorkedTextField"/>
        </VBox>
        <VBox styleClass="fieldBoxSmall">
            <Label fx:id="positionLabel" styleClass="positionLabel"
                   text="position"/>
            <ChoiceBox fx:id="positionChoiceBox" prefWidth="150.0"
                       styleClass="fieldLengthen"/>
        </VBox>
        <HBox alignment="CENTER" prefHeight="76.0" prefWidth="600.0"
              stylesheets="@../css/two-button-box.css">
            <VBox styleClass="buttonBox">
                <Button fx:id="saveButton" mnemonicParsing="false"
                        styleClass="actionButton" text="Save Changes"/>
            </VBox>
            <VBox styleClass="buttonBox">
                <Button fx:id="returnButton" mnemonicParsing="false"
                        styleClass="cancelButton" text="Return"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>
