<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group.project.controllers.customer.CustomerMenuOrderEditItemController">
    <top>
        <Label fx:id="headerLabel" text="Edit Order Item"
               BorderPane.alignment="CENTER"/>
    </top>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="saveChangesButton" mnemonicParsing="false"
                        styleClass="saveChangesButton" text="Save Changes"/>
                <Button fx:id="cancelButton" mnemonicParsing="false"
                        styleClass="cancelButton" text="Cancel"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER_LEFT" prefHeight="408.0" prefWidth="100.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="itemNameLabel" styleClass="itemNameLabel"
                       text="Item Name"/>
                <Label fx:id="quantityLabel" styleClass="quantityLabel"
                       text="quantity"/>
                <TextField fx:id="quantityTextField" onKeyReleased="#onChange"
                           styleClass="quantityTextField" text="1"/>
            </children>
        </VBox>
    </center>
</BorderPane>
