<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.group.project.controllers.customer.CustomerRegistrationController"
      fx:id="newCustomerWindow"
      stylesheets="@../css/small-windows.css"
>
    <children>
        <VBox styleClass="mainTitle">
            <Label text="Please enter your details below."/>
        </VBox>
        <VBox styleClass="fieldBox">
            <Label text="first name"/>
            <TextField fx:id="firstName" promptText="enter first name"
                       styleClass="firstName"/>
        </VBox>
        <VBox styleClass="fieldBox">
            <Label text="last name"/>
            <TextField fx:id="lastName" promptText="enter last name"
                       styleClass="lastName"/>
        </VBox>
        <VBox styleClass="fieldBox">
            <Label text="username"/>
            <TextField fx:id="username" promptText="enter username"
                       styleClass="username"/>
            <Label fx:id="errorUsernameLabel"
                   styleClass="errorUsernameLabel"
            />
        </VBox>
        <VBox styleClass="fieldBox">
            <Label text="address"/>
            <TextField fx:id="address" promptText="enter address"
                       styleClass="address"/>
        </VBox>
        <VBox stylesheets="@../css/two-button-box.css">
            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="600.0">
                <VBox styleClass="buttonBox">
                    <Button fx:id="confirmButton" mnemonicParsing="false"
                            styleClass="confirmButton"
                            text="Confirm"/>
                </VBox>
                <VBox styleClass="buttonBox">
                    <Button fx:id="cancelButton" mnemonicParsing="false"
                            styleClass="cancelButton"
                            text="Cancel"/>
                </VBox>
            </HBox>
        </VBox>
    </children>
</VBox>
