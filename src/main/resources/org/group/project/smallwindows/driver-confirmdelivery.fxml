<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="vbox"
      fx:controller="org.group.project.controllers.driver.DriverPendingDeliveryDetailsController"
      stylesheets="@../css/small-windows.css"
>
    <VBox styleClass="mainBox">
        <VBox styleClass="fieldBoxLonger">
            <Label fx:id="customerIdLabel" styleClass="customerIdLabel"
                   text="customer id"/>
            <TextField fx:id="customerIdTextField"
                       styleClass="fieldShorten"/>
        </VBox>
        <HBox alignment="CENTER">
            <VBox styleClass="fieldBoxSmallInHBoxSmaller">
                <Label fx:id="firstNameLabel"
                       styleClass="firstNameLabel"
                       text="first name"/>
                <TextField fx:id="firstNameTextField"
                           styleClass="firstNameTextField"/>
            </VBox>
            <VBox styleClass="fieldBoxSmallInHBoxSmaller">
                <Label fx:id="lastNameLabel" styleClass="lastNameLabel"
                       text="last name"/>
                <TextField fx:id="lastNameTextField"
                           styleClass="lastNameTextField"/>
            </VBox>
        </HBox>
        <VBox styleClass="fieldBoxLonger">
            <Label fx:id="addressLabel" styleClass="addressLabel"
                   text="customer address"/>
            <TextField fx:id="addressTextField" styleClass="addressTextField"/>
        </VBox>
        <HBox alignment="CENTER" stylesheets="@../css/two-button-box.css">
            <VBox styleClass="buttonBox">
                <Button fx:id="deliveryCompletedButton" mnemonicParsing="false"
                        styleClass="actionButton"
                        text="Confirm Delivery"/>
            </VBox>
            <VBox styleClass="buttonBox">
                <Button fx:id="returnButton" mnemonicParsing="false"
                        styleClass="cancelButton" text="Return"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>
